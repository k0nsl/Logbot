require 'json'
require 'cinch'
require 'redis'

channels = (ENV['LOGBOT_CHANNELS'] || '#k0nsl').split(/[\s,]+/)
redis    = Redis.new(:thread_safe => true)

channels.each do |chan|
  redis.sadd('irclog:channels', chan)
end

bot = Cinch::Bot.new do
  configure do |conf|
    conf.server = ENV['LOGBOT_SERVER'] || 'ragnarok.k0nsl.org'
    conf.nick   = ENV['LOGBOT_NICK']   || 'genericnondescripguy'
    conf.channels = channels
    conf.encoding = 'UTF-8'
  end

  on :message do |msg|
    next if msg.channel.nil?

    date = msg.time.strftime('%Y-%m-%d')
    key  = "irclog:channel:#{msg.channel.name}:#{date}"

    redis.rpush(key, {
      :time => msg.time.strftime('%s.%L'),
      :nick => msg.user.nick,
      :msg  => msg.message
    }.to_json)
  end
end

bot.start
